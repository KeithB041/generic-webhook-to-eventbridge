{
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true
  }
}

